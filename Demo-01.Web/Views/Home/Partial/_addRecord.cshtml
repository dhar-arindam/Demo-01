@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Demo01.Model.PatientModel

<form method="post" asp-action="Index" asp-controller="Home" role="form">
    <div class="row">
        <div class="col-sm-12">
            <div class="col-sm-4 form-group">
                <label for="forname">Forename</label>
                <input asp-for="Forename" class="form-control input-sm" />
                <span asp-validation-for="Forename" class="text-danger small"></span>
            </div>
            <div class="col-sm-4 form-group">
                <label for="surname">Surname</label>
                <input asp-for="Surname" class="form-control input-sm" />
                <span asp-validation-for="Surname" class="text-danger small"></span>
            </div>
            <div class="col-sm-4 form-group">
                <label for="dob">DOB</label>
                <input asp-for="DateOfBirth" class="form-control input-sm" max="@DateTime.Today.ToString("yyyy-MM-dd")"
                       min="1900-01-01" />
                <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="col-sm-4 form-check">
                <label for="gender">Gender</label>
                Male&nbsp;<input type="radio" name="gender" id="male" class="form-check-input" asp-for="Gender" value="true" />&nbsp;
                Female&nbsp;<input type="radio" name="gender" id="female" class="form-check-input" asp-for="Gender" value="false" />
                <span asp-validation-for="Gender" class="text-danger small"></span>
            </div>
            <div class="col-sm-8" id="contact">
                <label>Telephone</label>
                <div class="row">
                    <div class="col-sm-4 form-group">
                        <label for="mobile">Mobile</label>
                        <input asp-for="TelephoneNumber.MobileNumber" class="form-control input-sm" />
                        <span asp-validation-for="TelephoneNumber.MobileNumber" class="text-danger small"></span>
                    </div>
                    <div class="col-sm-4 form-group">
                        <label for="Home">Home</label>
                        <input asp-for="TelephoneNumber.HomeNumber" class="form-control input-sm" />
                        <span asp-validation-for="TelephoneNumber.HomeNumber" class="text-danger small"></span>
                    </div>
                    <div class="col-sm-4 form-group">
                        <label for="work">Work</label>
                        <input asp-for="TelephoneNumber.WorkNumber" class="form-control input-sm" />
                        <span asp-validation-for="TelephoneNumber.WorkNumber" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-6">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="col-sm-6 text-right">
            <button class="btn btn-default btn-sm" id="btnCancel" type="reset">Cancel</button>
            <button class="btn btn-success btn-sm" id="btnSave" type="submit">Save</button>
        </div>
    </div>
</form>